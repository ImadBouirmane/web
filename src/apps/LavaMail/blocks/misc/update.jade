.modal-content
	.modal-header.dialog-header-confirm.ng-scope
		button.close(type='button', ng-click='no()') &times;
		h4.modal-title.ng-binding
			span.glyphicon.glyphicon-check
			| {{'LAVAMAIL.UPDATE.TITLE' | translate}}
	.modal-body.ng-binding.ng-scope {{'LAVAMAIL.UPDATE.LB_DESCRIPTION' | translate}}
		div(ng-show="isLogoutRequired", style="margin-top: 1rem") {{'LAVAMAIL.UPDATE.LB_DESCRIPTION_LOGOUT_REQUIRED' | translate}}
	.modal-footer.ng-scope
		button.btn.btn-default.ng-binding(type='button', ng-click='yes()') {{'LAVAMAIL.UPDATE.BTN_UPDATE' | translate}}
		button.btn.btn-primary.ng-binding(type='button', ng-click='no()') {{'LAVAMAIL.UPDATE.BTN_REMIND_LATER' | translate}}