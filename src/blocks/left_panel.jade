div#left-panel.ng-cloak
	nav#navigation
		div#brand
			a(ui-sref="main.label({labelName: 'Inbox'})")
				img(src="img/Lavaboom-logo-full.svg")
		ul.list-unstyled
			li.compose
				a(ui-sref-active="active", ng-click="showPopup('compose')")
					span.icon-compose
					span.action {{'MAIN.NAV.LB_COMPOSE' | translate}}
			li(ui-sref-active="active", ng-repeat="(name, label) in labelsByName track by label.id")
				a(ui-sref="main.label({labelName: label.name})")
					span(ng-class="label.iconClass")
					span.action(ng-bind="label.name")
					span.badge
			li.separator
			li(ui-sref-active="active")
				a(ui-sref="main.contacts")
					span.icon-head
					span.action {{'MAIN.NAV.LB_CONTACTS' | translate}}
			li(ng-class="{ active: $state.includes('main.settings') }")
				a(ui-sref="main.settings.general")
					span.icon-cog
					span.action {{'MAIN.NAV.LB_SETTINGS' | translate}}
			li.logout
				small &#169; Lavaboom 2015
				a(href="#", ng-click="logout()")
					span.icon-power
					span.action {{'MAIN.NAV.LB_LOGOUT' | translate}}
