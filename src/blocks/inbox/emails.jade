#mail-thread.details-pane.ng-cloak
	div.pane-status(ng-if="selectedTid === null")
		.col-xs-24 {{'INBOX.LB_NOTHING_SELECTED' | translate}}
	div(ng-if="selectedTid !== null").row.no-gutter.actions.lava-icon-row
			.col-xs-24
				.lava-icon-wrapper
					a(href="#")
						span.icon-reply
					a(href="#")
						span.icon-reply-all
					a(href="#")
						span.icon-arrow-right
					//span.spacer
					//a(href="#")
						span.icon-star
					//a(href="#")
						span.icon-ban
					//a(href="#")
						span.icon-trash
	div(ng-if="selectedTid !== null").main-view
		.pane-status(ng-show="isLoading")
			img(src="/img/loader.svg")
		.row.no-gutter.mail(ng-repeat="email in emails")
			.col-xs-24
				header.row.no-gutter
					.col-xs-21
						strong(ng-bind="email.fromName")
						br
						| {{'MAIN.COMPOSE.LB_FROM' | translate}}:
						span(ng-repeat="from in email.from", ng-bind="from")
						br
						| {{'MAIN.COMPOSE.LB_SUBJECT' | translate}}:
						span(ng-bind="email.subject")
					.col-xs-2.when
						span(ng-bind="email.date | date")
					.col-xs-1.secure
						a.icon-<!--.$secure.-->
				.mail-content.row.no-gutter
					.col-xs-22(ng-show="email.body.state == 'ok'", ng-bind-html="email.body.data", email-body)
					.col-xs-22(ng-show="email.body.state == 'no_private_key'") {{'INBOX.LB_NO_PRIVATE_KEY_FOUND1' | translate}}
						div {{'INBOX.LB_NO_PRIVATE_KEY_FOUND2' | translate}}
							a(ui-sref="main.settings.security") {{'INBOX.LB_SETTINGS' | translate}}
							| {{'INBOX.LB_NO_PRIVATE_KEY_FOUND3' | translate}}
				//footer
					.row.no-gutter
						.col-xs-8
							a.attachment(href="test.mov", filetype="mov")
								span.fileCorner
								| Very Long Filename...pdf
								br
								| 24kb
						.col-xs-8
							a.attachment(href="test.mov", filetype="pdf")
								span.fileCorner
								| Very Long Filename...pdf
								br
								| 24kb
