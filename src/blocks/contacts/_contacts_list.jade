#contacts-list.list-pane.ng-cloak(ng-controller='CtrlContacts')
	.filters.row.no-gutter.lava-icon-row.z2
		label.search-icon.col-xs-3(for='top-search')
			span.icon-search
		input#top-search.search.col-xs-13(placeholder='Search Contacts', ng-model="searchText")
		.lava-icon-wrapper.col-xs-8.text-right
			a(href='#')
				span.icon-plus
			a(href='#')
				span.icon-star
	.list-group-wrapper.scrollable.z1
		ul.list-group
			section(data-ng-repeat="(alpha, contacts) in sortedPeople")
				li.separator.list-group-item(ng-if="contacts") {{alpha}}
				li.list-group-item(data-ng-repeat="contact in contacts | filter: searchText")
					a(class="sec-{{contact.sec}}", ui-sref='main.contacts.profile')
						span {{ contact.name }}
						span.sec-icon.icon-lock(ng-if="contact.sec")
						span.sec-icon.icon-unlock(ng-if="!contact.sec")

