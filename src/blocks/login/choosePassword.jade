form.steps-form.ng-cloak(name="__form", ng-class="{'errors': currentErrorMessage}", ng-submit="__form.$valid && updatePassword()", novalidate, ng-autodisable)
	p.lead.pack {{'LOGIN.CHOOSE_PASSWORD.TITLE' | translate}}

	div.alert.alert-danger(ng-show="currentErrorMessage", ng-bind="currentErrorMessage")

	p.text-center.steps
		span.icon-unread.active
		span.icon-unread.active
		span.icon-unread.active
		span.icon-unread.active
		span.icon-unread
		span.icon-unread

	div.info
		span.icon-info
		p {{'LOGIN.CHOOSE_PASSWORD.LB_WARNING1' | translate}}

	div.form-group
		input.form-control.input-lg(type="password", name="password", ng-model="form.password", placeholder="{{'GLOBAL.PLC_CHOOSE_PASSWORD' | translate}}", focus="true", required, minlength="8", ng-pattern="/^.*(?=.*[a-z])(?=.*[A-Z])(?=.*[\\d\\W]).*$/")
		span.alert.alert-danger(ng-show="__form.$submitted", ng-messages="__form.password.$error", ng-messages-include="partials/validationMessages.html")
			span(ng-message="pattern") {{'VALIDATION.LB_PASSWORD' | translate}}
	div.form-group
		input.form-control.input-lg(type="password", name="passwordConfirm", ng-model="form.passwordConfirm", placeholder="{{'GLOBAL.PLC_RETYPE_PASSWORD' | translate}}", required, match="form.password")
		span.alert.alert-danger(ng-show="__form.$submitted", ng-messages="__form.passwordConfirm.$error", ng-messages-include="partials/validationMessages.html")

	hr.spacer
	
	div.info
		span.icon-info
		p {{'LOGIN.CHOOSE_PASSWORD.LB_WARNING2' | translate}}
	hr.spacer
	footer
		button.btn.btn-block.btn-lg.btn-primary(type="submit") {{'LOGIN.CHOOSE_PASSWORD.BTN_NEXT' | translate}}