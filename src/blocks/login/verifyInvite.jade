form.steps-form.ng-cloak(name="verify")
	p.lead.pack {{'LOGIN.VERIFY_INVITE.TITLE' | translate}}

	p.text-center.steps.large
		span.icon-unread.active
		span.icon-unread
		span.icon-unread
		span.icon-unread
		span.icon-unread
		span.icon-unread

	span.error(ng-bind="currentErrorMessage")

	div.form-group
		input.form-control.input-lg(type='text', ng-model='form.username', placeholder="{{'GLOBAL.USERNAME' | translate}}", minlength=2, required)
	div.form-group
		textarea.form-control.input-lg(type='text', ng-model='form.token', placeholder="{{'LOGIN.VERIFY_INVITE.PLC_INVITE_CODE' | translate}}", minlength=8, required)

	hr.spacer

	.checkbox
		input#check1(type='checkbox', name="check1", ng-model='form.isNews')
		label(for='check1') {{'LOGIN.VERIFY_INVITE.LB_NEWS' | translate}}

	p.text-center 
		span {{'LOGIN.VERIFY_INVITE.LB_TOS' | translate}}
		a {{'LOGIN.VERIFY_INVITE.LNK_TOS' | translate}}

	footer
		button.btn.btn-block.btn-lg.btn-primary(type='submit', ng-disabled='verify.$invalid', ng-click='requestVerify()') {{'GLOBAL.NEXT_STEP' | translate}}