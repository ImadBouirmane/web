.cfp-hotkeys-container.fade(ng-class='{"in": helpVisible}')
	.cfp-hotkeys
		h4.cfp-hotkeys-title {{ title }}
		.key-row(ng-repeat='hotkey in hotkeys')
			.cfp-hotkeys-keys
				span.cfp-hotkeys-key.label.label-default(ng-repeat='key in hotkey.combo track by $index') {{ key }}
			.cfp-hotkeys-text {{ hotkey.description }}
		.cfp-hotkeys-close(ng-click='toggleCheatSheet()')
			span.icon-close