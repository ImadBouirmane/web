		//- 			| Your picture is only shown in mails to recipents in your contacts. Itâ€˜s only purpose is to make your messages more personal. It is not used for anything else.
		h4 Name
		ul.list-group
			li.list-group-item
				.text-control
					label Username
					input.icon-field.form-control(disabled='', ng-model="name")
					span.icon-lock
			li.list-group-item
				.text-control
					label First Name
					input.icon-field.form-control(ng-model="settings.firstName")
					span.icon-edit
			li.list-group-item
				.text-control
					label Last Name
					input.icon-field.icon-edit.form-control(ng-model="settings.lastName")
					span.icon-edit
			li.list-group-item
				.text-control
					label Display Name
					input.icon-field.icon-edit.form-control(ng-model="settings.displayName")
					span.icon-edit
		h4 Signature
		ul.list-group
			li.list-group-item
				label Signature Enabled
				.control
					label.switch
						input(type='checkbox', ng-model="settings.isSignatureEnabled")
						i
			li.list-group-item
				.text-control
					.signature
						div(text-angular="", ng-model="settings.signatureHtml")
					span.icon-edit
		h4 Newsletter
		ul.list-group
			li.list-group-item
				label Send me News about Lavaboom
				.control
					label.switch
						input(type='checkbox', ng-model="settings.isSubscribedToNews")
						i
		br
		ul.list-group(ng-show="status")
			li.list-group-item
				label(ng-bind="status")