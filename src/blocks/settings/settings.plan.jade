.row.settings-panel.ng-cloak(ng-controller="CtrlSettingsPlan")
	form.settings.col-xs-22.col-xs-offset-1.col-sm-20.col-sm-offset-2.col-md-12.col-md-offset-6.col-xs-22.col-xs-offset-1
		.form-wrap(ng-repeat="(name, plan) in plans")
			h4 {{plan.TITLE}}
			.price-tag
				span.text {{plan.LB_TAG}}
				span.caret
			ul.list-group.suppress-borders
				li.list-group-item(ng-repeat="item in plan.LB_ITEMS") {{item}}
				li.list-group-item(ng-show="name == currentPlanName")
					hr
					| {{'MAIN.SETTINGS.PLAN.LB_CURRENT' | translate}}
					span.icon.icon-tick.pull-right.icon-circle