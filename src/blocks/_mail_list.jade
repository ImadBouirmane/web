#mail-list.list-pane.ng-cloak(ng-controller="CtrlMailList")
	.filters.row.no-gutter.lava-icon-row
		label.search-icon.col-xs-3(for="top-search")
			span.icon-search
		input#top-search.search.col-xs-13(type="text", placeholder="Search Emails")
		.lava-icon-wrapper.col-xs-8(ng-show="selected")
			a(href="#")
				span.icon-arrow-down
			a(href="#")
				span.icon-star
			a(href="#")
				span.icon-ban
			a(href="#", ng-click="delete()")
				span.icon-trash
	.mail-list-group
		div(ng-if="items.length < 1") No emails found
		div(ng-repeat="item in items track by item.id", ng-class="{active: selected==item}", ng-click="choose(item)")
			.mail-list-item(class="{{item.active}}", href="#")
				.row.no-gutter
					.col-xs-3.clear.buttons
						a(href="#")
							span.icon-star
						a(href="#")
							span.icon-reply
						a(href="#")
							span.icon-arrow-right
					.col-xs-16.pack
						h5(ng-bind="item.sender")
						p.subject(ng-bind="item.subject")
						p.summary(ng-bind-html="item.preview ? item.preview : 'INBOX.NO_PREVIEW_AVAILABLE' | translate")
					.col-xs-5.when
						span.date.lava-icon-row(ng-bind="item.date | date")
						br
						br
						.lava-icon-row
							a(ng-show="item.attachments && item.attachments.length > 0")
								span.icon-paper-clip
							a(ng-show="item.isEncrypted")
								span.icon-lock
