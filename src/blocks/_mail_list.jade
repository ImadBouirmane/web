#mail-list.list-pane(ng-controller="CtrlMailList")
	.filters.row.no-gutter.lava-icon-row
		label.search-icon.col-xs-3(for="top-search")
			span.icon-search
		input#top-search.search.col-xs-13(type="text", placeholder="Search Emails")
		.lava-icon-wrapper.col-xs-8
			a(href="#")
				span.icon-arrow-down
			a(href="#")
				span.icon-star
			a(href="#")
				span.icon-ban
			a(href="#")
				span.icon-trash
	.mail-list-group
		div(ng-if="items.length < 1") No emails found
		div(ng-repeat="item in items track by item.id", ng-class="{active: selected==item}", ng-click="choose(item)")
			.mail-list-item(class="{{item.active}}", href="#")
				.row.no-gutter
					.col-xs-3.clear.buttons
						a(href="#")
							span.icon-star
						a(href="#")
							span.icon-reply
						a(href="#")
							span.icon-arrow-right
					.col-xs-16.pack
						h5 {{item.sender}}
						p.subject {{item.subject}}
						p.summary {{item.desc}}
					.col-xs-5.when
						span.date.lava-icon-row {{item.date}}
						br
						br
						.lava-icon-row
							a
								span.icon-paper-clip
							a(href="#")
								span.icon-lock
