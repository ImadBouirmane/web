#mail-list.list-pane.ng-cloak(ng-controller="CtrlMailList")
	.filters.row.no-gutter.lava-icon-row
		label.search-icon.col-xs-3(for="top-search")
			span.icon-search
		input#top-search.search.col-xs-13(type="text", placeholder="Search Emails")
		.lava-icon-wrapper.col-xs-8(ng-show="selectedTid !== null")
			a(href="#")
				span.icon-arrow-down
			a(href="#", ng-click="starThread()")
				span.icon-star
			a(href="#", ng-click="spamThread()")
				span.icon-ban
			a(href="#", ng-click="deleteThread()")
				span.icon-trash
	.mail-list-group
		div.pane-status(ng-show="isLoading") Loading...
		div.pane-status(ng-show="!isLoading && threadIdsList.length < 1") No emails found
		div(ng-show="!isLoading", ng-repeat="tid in threadIdsList", ng-class="{active: selectedTid == tid}", ng-click="choose(tid)")
			.mail-list-item(class="{{threads[tid].active}}", href="#")
				.row.no-gutter
					.col-xs-3.clear.buttons
						a(href="#")
							span.icon-star
						a(ui-sref=".popup.compose({threadId: threads[tid].id})")
							span.icon-reply
						a(href="#")
							span.icon-arrow-right
					.col-xs-16.pack
						h5(ng-bind="threads[tid].headerEmail.sender")
						p.subject(ng-bind="threads[tid].headerEmail.subject")
						p.summary(ng-bind-html="threads[tid].headerEmail.preview ? threads[tid].headerEmail.preview.text : 'INBOX.NO_PREVIEW_AVAILABLE' | translate")
					.col-xs-5.when
						span.date.lava-icon-row(ng-bind="threads[tid].headerEmail.date | humanDate")
						br
						br
						.lava-icon-row
							a(ng-show="threads[tid].headerEmail.attachments && threads[tid].headerEmail.attachments.length > 0")
								span.icon-paper-clip
							a(ng-show="threads[tid].headerEmail.isEncrypted")
								span.icon-lock
